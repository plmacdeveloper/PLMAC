<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/real_ivory"
    android:orientation="vertical"
    tools:context=".StudentMainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ImageView
        android:id="@+id/img_result_qr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/midnight_blue" />


    <Button
        android:id="@+id/btStudentMainViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/quicksand_bold"
        android:text="View Profile"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btStudentMainViewAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/quicksand_bold"
        android:text="View Attendance"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btStudentMainViewAnnouncements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/quicksand_bold"
        android:text="View Announcements"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>